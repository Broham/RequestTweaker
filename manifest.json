{
  "manifest_version": 2,

  "name": "Request Tweaker",
  "description": "This extension allows you to record, edit and send HTTP requests.",
  "version": "1.0",
  "devtools_page": "devtools.html",
  "browser_action": {
    "default_icon": "lib/octo.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}